@model ColaboradorListView
@{
    Layout = "Layout";
    ViewData["Title"] = "Colaboradores";
}

<h2>Colaboradores do serviço de esterilização</h2>

<form asp-action="Index">
    <div>
        <h3>Pesquisa</h3>
        <menu>
            <h5>Nome do colaborador:<input style="width:250px;" asp-for="CurrentColaborador" /></h5>
        </menu>
        <input type="submit" value="Pesquisar" class="btn btn-info" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-order="ID">ColaboradorId</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="nome">Nome</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="funcao">Função</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="contato">Contacto</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="Cc">Cc/BI</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Colaborador)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cc)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ColaboradorId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ColaboradorId" class="btn btn-info">Mais Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ColaboradorId" class="btn btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div page-model="@Model.Pagination"></div>
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Colaborador</a>
</p>
