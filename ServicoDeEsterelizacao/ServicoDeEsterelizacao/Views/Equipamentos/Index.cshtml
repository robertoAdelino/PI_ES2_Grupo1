@model EquipamentoListView

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Pesquisa</div>
        <div class="panel-body">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="CurrentEquipamento" class="control-label"></label>
                    <input asp-for="CurrentEquipamento" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Pesquisar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Tipo
            </th>
            <th>
                Capacidade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Equipamento) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidade)
            </td>
            <td>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipamentoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EquipamentoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipamentoID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div page-model="@Model.Pagination"></div>

<p>
    <a asp-action="Create" class="btn btn-default">Adicionar novo equipamento</a>
</p>