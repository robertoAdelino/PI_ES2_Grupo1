@model IEnumerable<ServicoDeEsterelizacao.Models.Equipamento>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capacidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipamentoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EquipamentoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipamentoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
