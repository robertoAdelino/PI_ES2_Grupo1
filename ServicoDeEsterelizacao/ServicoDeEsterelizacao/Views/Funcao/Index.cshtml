@model IEnumerable<ServicoDeEsterelizacao.Models.Funcao>

@{
    ViewData["Title"] = "Funções";
}

<h2>Funções</h2>

<p>
    <a asp-action="Create">Adcionar Função:</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncaoID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FuncaoID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncaoID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
