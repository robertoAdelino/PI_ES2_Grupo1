@model ServicoDeEsterelizacao.Models.Horario

@{
    Layout = "Layout";
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurnoId" class="control-label"></label>
                <select asp-for="TurnoId" class ="form-control" asp-items="ViewBag.TurnoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PostoId" class="control-label"></label>
                <select asp-for="PostoId" class ="form-control" asp-items="ViewBag.PostoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select asp-for="ColaboradorId" class ="form-control" asp-items="ViewBag.ColaboradorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Voltar atrás</a>
            </div>
        </form>
    </div>
</div>


