@model IEnumerable<ServicoDeEsterelizacao.Models.Horario>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colaborador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turno.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colaborador.Cc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HorarioID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HorarioID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HorarioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
