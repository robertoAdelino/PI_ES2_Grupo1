@model IEnumerable<ServicoDeEsterelizacao.Models.Materialcs>

@{
    ViewData["Title"] = "Material";
}

<h2>Materiais</h2>

<p>
    <a asp-action="Create">Adicionar novo material</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaterialcsId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MaterialcsId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.MaterialcsId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
