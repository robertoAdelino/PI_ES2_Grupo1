        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaterialcsId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.MaterialcsId" class="btn btn-info">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaterialcsId" class="btn btn-danger">Apagar</a>
