@model PostoViewList

@{
    Layout = "Layout";
    ViewData["Title"] = "Index";
}

<h2>Postos</h2>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Pesquisa</div>
        <div class="panel-body">
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="CurrentNome" class="control-label"></label>
                    <input asp-for="CurrentNome" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Pesquisar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-order="ID">PostoId</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="Nome">Nome</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Posto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostoId" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PostoId" class="btn btn-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.PostoId" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar novo posto</a>
</p>
