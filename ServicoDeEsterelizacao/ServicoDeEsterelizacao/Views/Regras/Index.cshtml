@model IEnumerable<ServicoDeEsterelizacao.Models.Regras>

@{
    ViewData["Title"] = "Index";
}

<h2>Regras</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RegrasID" class="btn btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RegrasID"class="btn btn-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.RegrasID"class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar nova</a>
</p>