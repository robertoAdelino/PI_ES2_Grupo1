@model IEnumerable<ServicoDeEsterelizacao.Models.Tipo>

@{
    Layout = "Layout";
    ViewData["Title"] = "Index";
}

<h2>Tipos de Equipamento</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TipoID" class="btn btn-default">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.TipoID" class="btn btn-info">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.TipoID" class="btn btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar novo tipo de equipamento.</a>
</p>