@model ServicoDeEsterelizacao.Models.Trabalho_Posto

@{
    Layout = "Layout";
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Trabalho_Posto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Equipamento.Tipo.Nome" class="control-label"></label>
                <select asp-for="Equipamento.Tipo.Nome" class ="form-control" asp-items="ViewBag.EquipamentoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaterialcsID" class="control-label"></label>
                <select asp-for="MaterialcsID" class ="form-control" asp-items="ViewBag.MaterialcsID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioID" class="control-label"></label>
                <select asp-for="HorarioID" class ="form-control" asp-items="ViewBag.HorarioID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataServico" class="control-label"></label>
                <input asp-for="DataServico" class="form-control" />
                <span asp-validation-for="DataServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Voltar atrás</a>
            </div>
        </form>
    </div>
</div>


