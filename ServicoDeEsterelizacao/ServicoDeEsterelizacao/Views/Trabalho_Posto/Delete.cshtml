@model ServicoDeEsterelizacao.Models.Trabalho_Posto

@{
    Layout = "Layout";
    ViewData["Title"] = "Delete";
}

<h2>Apagar</h2>

<h3>Tem a certeza que deseja apagar?</h3>
<div>
    <h4>Trabalho_Posto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Trabalho_PostoID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Trabalho_PostoID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Equipamento)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Equipamento.TipoID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Materialcs)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Materialcs.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Horario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Horario.HorarioID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataServico)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataServico)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EquipamentoID" />
        <input type="hidden" asp-for="MaterialcsID" />
        <a href="#Confirmacao" class="trigger-btn" data-toggle="modal">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </a> |
        <a asp-action="Index" class="btn btn-default">Voltar atrás</a>
    </form>

    <div id="Confirmacao" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">

                <div class="modal-body">
                    <p>Tem a certeza que deseja apagar? </p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <input type="hidden" asp-for="Trabalho_PostoID" />
                        <input type="submit" class="btn btn-danger" value="Eliminar" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
