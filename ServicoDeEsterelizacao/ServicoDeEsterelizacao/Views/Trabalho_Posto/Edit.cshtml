@model ServicoDeEsterelizacao.Models.Trabalho_Posto

@{
    Layout = "Layout";
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Trabalho_Posto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Trabalho_PostoID" class="control-label">TarefaID:@Html.DisplayFor(model => model.Trabalho_PostoID)</label>

                <span asp-validation-for="Trabalho_PostoID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EquipamentoID" />
            <input type="hidden" asp-for="MaterialcsID" />
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioID" class="control-label"></label>
                <select asp-for="HorarioID" class="form-control" asp-items="ViewBag.HorarioID"></select>
                <span asp-validation-for="HorarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataServico" class="control-label"></label>
                <input asp-for="DataServico" class="form-control" />
                <span asp-validation-for="DataServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-action="Index"class="btn btn-default">Voltar atrás</a>
            </div>
        </form>
    </div>
</div>

