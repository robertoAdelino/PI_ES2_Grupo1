@model IEnumerable<ServicoDeEsterelizacao.Models.Turno>

@{
    Layout = "Layout";
    ViewData["Title"] = "Index";
}

<h2>Turnos</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horainicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horafim)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horainicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Horafim)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TurnoId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.TurnoId" class="btn btn-info">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.TurnoId" class="btn btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar novo turno</a>
</p>